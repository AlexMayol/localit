{
  "name": "localit",
  "version": "6.0.0",
  "license": "MIT",
  "description": "Manage your Storage with ease, adding expiration dates through a simple API",
  "repository": "alexmayol/localit",
  "main": "./dist/localit.cjs.js",
  "module": "./dist/localit.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/localit.es.js",
      "require": "./dist/localit.cjs.js"
    }
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "author": "Alejandro Mayol",
  "keywords": [
    "JavaScript",
    "library",
    "localStorage",
    "sessionStorage",
    "cache",
    "store",
    "Vite",
    "TypeScript"
  ],
  "scripts": {
    "build": "vite build",
    "test": "npm run build && vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "pretty": "npm run prettier:fix && npm run lint:fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^24.0.3",
    "eslint": "^9.15.0",
    "globals": "^15.6.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.45.1"
  }
}
